---
import { prng } from '$functions/prng'
import { sample } from '$functions/sample'
import BaseLayout from './base.astro'

export interface Props {
  title: string
}

const { title } = Astro.props

const to = 'to-[--accent-100]'

const from = sample(
  [
    'from-red-100',
    'from-orange-100',
    'from-amber-100',
    'from-yellow-100',
    'from-lime-100',
    'from-green-100',
    'from-emerald-100',
    'from-sky-100',
    'from-blue-100',
    'from-indigo-100',
    'from-purple-100',
    'from-fuchsia-100',
    'from-pink-100',
    'from-rose-100',
  ],
  prng(Astro, ['page', 2])
)
---

<BaseLayout>
  <h1 class="px-6 pb-8 text-center text-4xl sm:text-5xl uppercase break-words">
    {title}
  </h1>
  <div
    class={`grid md:divide-x-2 divide-black bg-white border-t-2 border-black grid-cols-1 sm:[grid-template-columns:minmax(240px,1fr)_minmax(0,4fr)] md:[grid-template-columns:minmax(288px,1fr)_minmax(0,4fr)] 2xl:[grid-template-columns:minmax(288px,1fr)_minmax(0,3fr)_minmax(288px,1fr)]`}
  >
    <div class={`col-span-1 bg-gradient-to-tr ${from} ${to}`}>
      <div class="sticky top-0 flex flex-col sm:border-none md:pb-12">
        <slot name="sidebar-left" />
        <div class="hidden md:flex flex-col">
          <slot name="sidebar-left-at-least-2-columns" />
        </div>
        <div class="hidden md:flex 2xl:hidden flex-col">
          <slot name="sidebar-left-less-than-3-columns" />
        </div>
      </div>
    </div>
    <div
      class="col-span-1 px-5 md:px-12 py-8 md:py-10 md:min-h-[calc(100vh-24rem)] relative"
    >
      <slot />
    </div>
    <div class={`col-span-1 hidden 2xl:block bg-gradient-to-tr ${from} ${to}`}>
      <div class="sticky top-0 flex flex-col">
        <slot name="sidebar-right" />
      </div>
    </div>
    <div
      class={`col-span-1 md:hidden border-t-2 md:border-y-2  bg-gradient-to-tr ${from} ${to}`}
    >
      <div class="flex flex-col pt-0.5">
        <slot name="sidebar-bottom" />
      </div>
    </div>
  </div>
</BaseLayout>
