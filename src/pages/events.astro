---
import dayjs from 'dayjs'

import BaseLayout from '$layouts/base.astro'
import EventPoster from '$components/eventPoster.astro'
import Head from '$components/head.astro'
import CFImage from '$components/cfImage.astro'

import { getEvents } from '$functions/getEvents'
import { getWebsiteConfig } from '$functions/getWebsiteConfig'
import { upcomingEventsFilter } from '$functions/upcomingEventsFilter'

const now = dayjs()
const events = await getEvents()

const websiteConfig = await getWebsiteConfig()

const upcomingEvents = events.filter(upcomingEventsFilter).reverse()
---

<Head title="Events" />

<BaseLayout class="mx-auto max-w-7xl space-y-12 [&>*]:px-6">
  {
    upcomingEvents.length !== 0 && (
      <section>
        <h1 class="text-3xl font-medium uppercase">Upcoming Events</h1>
        <div class="mt-6 space-y-12 lg:grid lg:grid-cols-2 lg:gap-y-12 lg:space-y-0">
          {upcomingEvents.map(event => (
            <EventPoster event={event} />
          ))}
        </div>
      </section>
    )
  }
  <section>
    <h1 class="text-3xl font-medium uppercase">Series</h1>
    <div class="grid gap-6 pt-8 sm:grid-cols-3 [&>*]:rounded-xl [&>*]:p-8">
      {
        websiteConfig?.events.recurring.map(event => (
          <a class={`border border-neutral-300 bg-white`} href={event.url}>
            <p class="font-medium uppercase leading-none">{event.name}</p>
            <p class="uppercase">{event.schedule}</p>
          </a>
        ))
      }
    </div>
  </section>
  <section class="pb-12">
    <h1 class="text-3xl font-medium uppercase">Past Events</h1>
    <div
      class="mt-6 grid grid-cols-2 gap-4 sm:gap-6 md:grid-cols-3 lg:grid-cols-4"
    >
      {
        events
          .filter(event => event.date.isBefore(now))
          .map(event => (
            <a href={`/event/${event.id}`}>
              <CFImage
                src={event.image}
                alt={event.name}
                width={300}
                ratio={1}
                class="w-full"
              />
            </a>
          ))
      }
    </div>
  </section>
</BaseLayout>
