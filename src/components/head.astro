---
import { SEO } from 'astro-seo'

export interface Props {
  title?: string
  description?: string
}

const { title, description = "Creatorsgarten - Democratize creation for all" } = Astro.props

const builtTitle = title ? [title, 'Creatorsgarten'].join(' Â· ') : 'Creatorsgarten'
const builtImage = Astro.url.origin + '/images/og.jpg'
---

<SEO
  slot="head"
  title={builtTitle}
  description={description}
  openGraph={{
    basic: {
      title: builtTitle,
      type: 'website',
      image: builtImage,
    },
  }}
  twitter={{
    card: 'summary_large_image',
    title: builtTitle,
    image: builtImage,
  }}
/>
